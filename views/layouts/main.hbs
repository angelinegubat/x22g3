<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    {{#if addedStyles}}
    {{#each addedStyles}}
    <link rel="stylesheet" href="/css/{{this}}.css">
    {{/each}}
    {{/if}}
    <link href="https://fonts.googleapis.com/css?family=DM+Sans&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/javascript/styling-script.js" type="text/javascript"></script>
    {{#if addedScripts}}
    {{#each addedScripts}}
    <script src="/javascript/{{this}}.js"></script>
    {{/each}}
    {{/if}}


    <title>{{ title }}</title>

</head>

<body>

    {{> header }}

    {{> sidebar }}

    <div id="content">
        <div id="main">
            {{{ body }}}

        </div>
        {{> footer }}

    </div>

    <script>
        responsiveFontSize("[class^='res-']");
        responsiveFontSize("h1", 60);
        responsiveFontSize("h2", 42);
        responsiveFontSize("h3", 20);
        responsiveFontSize("input#submit", 12);

        responsiveFontSize('.input-bar-label', 12);
        responsiveFontSize('.input-bar-input', 15);
        responsiveFontSize('.input-bar-btn', 12);
        
        active("#navlist");
        active("#sidebarlist");
    </script>

</body>

</html>