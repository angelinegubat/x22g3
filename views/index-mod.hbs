<script>
    function checkField() {
        var form = document.forms[0];
        var inputs = form.querySelectorAll('input');

        for (let i = 0; i < inputs.length - 1; i++) {
            if (inputs[i].value == '') {
                inputs[i].style.borderColor = 'red';
            } else {
                inputs[i].style.borderColor = '#373b4485';
            }
        }
    }
</script>