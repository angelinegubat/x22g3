<!-- TEST -->
{{#> modal id="add-student" header-text="Add a Student"}}
  {{#*inline "modal-body"}}
    <form method="POST" id="add-student-form">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="first">First Name<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="first" id="first">
          <div id="first-error" class="invalid-feedback"></div>

        </div>
        <div class="form-group col-md-4">
          <label for="middle">Middle Name<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="middle" id="middle">
          <div id="middle-error" class="invalid-feedback"></div>
        </div>
        <div class="form-group col-md-4">
          <label for="last">Last Name<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="last" id="last">
          <div id="last-error" class="invalid-feedback"></div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <label for="email">Email<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="email" id="email">
          <div id="email-error" class="invalid-feedback"></div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <label for="college">College<span class="text-danger">*</span></label>
          <select name="college" id="college" class="custom-select">
            <option value="">Loading...</option>
          </select>
          <div id="college-error" class="invalid-feedback"></div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-12">
          <label for="degree">Degree<span class="text-danger">*</span></label>
          <select name="degree" id="degree" class="custom-select">
            <option value="">Select a college...</option>
          </select>
          <div id="degree-error" class="invalid-feedback"></div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="idNum">ID Number<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="idNum" id="idNum">
          <div id="idNum-error" class="invalid-feedback"></div>
        </div>
        <div class="form-group col-md-3">
          <label for="year">Year<span class="text-danger">*</span></label>
          <input type="number" min="1" class="form-control" name="year" id="year">
          <div id="year-error" class="invalid-feedback"></div>
        </div>
        <div class="form-group col-md-3">
          <label for="section">Section<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="section" id="section">
          <div id="section-error" class="invalid-feedback"></div>
        </div>
      </div>

    </form>
  {{/inline}}

  {{#*inline "modal-footer"}}
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" form="add-student-form" class="btn btn-primary" id="add-student-submit">
      <div id="add-student-spinner" class="spinner-border spinner-border-sm d-none" role="status">
        <span class="sr-only">Loading...</span>
      </div>
      <span id="add-student-text">Submit</span>
    </button>
  {{/inline}}
{{/modal}}

<div id="student-list-header-container">
  <h2>Students
    <button class="btn btn-primary ml-3" id="add-student-modal-btn" data-toggle="modal"
      data-target="#add-student-modal">Add A Student</button>
  </h2>
</div>

<br>
<label for="idNum">Search for a student</label>
<input type="search" id="idNum" name="idNum" class="form-control" placeholder="Enter student's ID Number">
<br>
<div class="table-striped table-bordered" id="students-table"></div>

