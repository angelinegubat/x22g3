<div class="modal fade" id="{{id}}-modal" tabindex="-1" aria-labelledby="{{id}}" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      {{!-- modal header --}}
      <div class="modal-header">
        <h5 class="modal-title" id="add-a-student">{{header-text}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      {{!-- modal body --}}
      <div class="modal-body">
        {{> modal-body}}
      </div>

      {{!-- modal footer --}}
      <div class="modal-footer">
        {{> modal-footer}}
      </div>
    </div>
  </div>
</div>
